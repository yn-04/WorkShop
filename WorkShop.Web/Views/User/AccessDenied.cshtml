@{
    ViewData["Title"] = "Access Denied";
    // ธีมสีม่วง
    var purplePrimary = "#6f42c1";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 60vh;">
    <div class="text-center">
        <div class="mb-4">
            <i class="fa fa-ban fa-5x" style="color: @purplePrimary;"></i>
        </div>
        
        <h1 class="display-4 fw-bold mb-3" style="color: @purplePrimary;">Access Denied</h1>
        
        <p class="lead text-muted mb-4">
            You do not have permission to access this resource.<br>
            Please contact your administrator.
        </p>
        
        <a href="/" class="btn text-white px-5 py-2 rounded-pill shadow-sm" 
           style="background-color: @purplePrimary;">
            Back to Home
        </a>
    </div>
</div>