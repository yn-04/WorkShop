@model WorkShop.Service.Models.RoleFormModel

@{
    ViewData["Title"] = "Edit Role";
    var purplePrimary = "#6f42c1";
}

<style>
    .btn-purple { background-color: @purplePrimary; color: white; border: none; }
    .btn-purple:hover { background-color: #5a32a3; color: white; }
    .header-line { border-bottom: 2px solid #e0d6f5; color: #5a32a3; padding-bottom: 10px; margin-bottom: 20px; }
</style>
<!--กรอกฟอร์ม Edit-->
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white" style="background-color: @purplePrimary;">
            <h4 class="mb-0"><i class="fa fa-edit"></i> Edit Role: @Model.RoleName</h4>
        </div>
        <div class="card-body p-4" style="background-color: #fbfaff;">
            
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="RoleId" />

                <h5 class="header-line">Role Details</h5>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label fw-bold">Description</label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold d-block">Status</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsActive" value="true" id="act">
                        <label class="form-check-label" for="act">Active</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsActive" value="false" id="inact">
                        <label class="form-check-label" for="inact">Inactive</label>
                    </div>
                </div>

                <h5 class="header-line mt-4">Permissions Assignment</h5>
                <div class="card bg-white border">
                    <div class="card-body">
                        <div class="row">
                            @for (int i = 0; i < Model.MenuList.Count; i++)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="form-check">
                                        <input type="hidden" asp-for="MenuList[i].MenuId" />
                                        <input type="hidden" asp-for="MenuList[i].MenuName" />
                                        <input class="form-check-input" type="checkbox" asp-for="MenuList[i].IsSelected">
                                        <label class="form-check-label">@Model.MenuList[i].MenuName</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-purple px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>